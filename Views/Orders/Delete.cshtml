@model ASPProjectFinal.Models.Order

@{
    ViewData["Title"] = "Supprimer Commande";
}

<div class="container mx-auto">
    <div class="card animate-fade-in">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h1>Supprimer la Commande @Model.OrderId</h1>
        <div class="mb-6">
            <h3 class="text-xl text-red-500 font-semibold mb-4">Êtes-vous sûr de vouloir supprimer cette commande ?</h3>
            <dl class="grid grid-cols-2 gap-4">
                <dt class="font-medium text-gray-300">ID Client</dt>
                <dd>@Model.CustomerId</dd>
                <dt class="font-medium text-gray-300">Date de Commande</dt>
                <dd>@Model.OrderDate?.ToString("dd/MM/yyyy")</dd>
                <dt class="font-medium text-gray-300">Pays de Livraison</dt>
                <dd>@Model.ShipCountry</dd>
            </dl>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="OrderId" />
            <div class="flex justify-end space-x-4">
                <button type="submit" class="btn btn-danger">Supprimer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>